<UserControl x:Class="TourPlanner.Controls.TourImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TourPlanner.Controls"
             mc:Ignorable="d"
             Loaded="TourImageControl_Loaded"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Border Background="LightGray" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <Image x:Name="ImagePresenter" Stretch="UniformToFill"/>
        </Border>
    </Grid>
</UserControl>
